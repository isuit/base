  "version": "0.0.0",
  "description": "iSuite base",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint -c ./.eslintrc --ext .ts",
    "lint:src": "npm run lint src",
    "compile": "tsc -p tsconfig.json",
